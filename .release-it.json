{
	"$schema": "https://unpkg.com/release-it@18/schema/release-it.json",
	"git": {
		"commitMessage": "chore: release v${version}",
		"tagName": "v${version}",
		"requireCommits": true
	},
	"github": {
		"tokenRef": "RELEASE_IT_TOKEN",
		"release": true,
		"releaseNotes": "npx conventional-changelog -p angular -i CHANGELOG.md -s"
	},
	"npm": {
		"publish": true
	},
	"plugins": {
		"@release-it/conventional-changelog": {
			"preset": "angular",
			"infile": "CHANGELOG.md"
		}
	}
}
