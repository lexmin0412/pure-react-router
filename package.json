{
  "name": "pure-react-router",
  "version": "0.0.2",
  "description": "基于 React 的超轻量路由库，参考了 React Router 但大幅精简了 API。",
  "main": "./lib/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:commonjs": "rimraf lib && tsc --target es5 --outDir lib --module commonjs --declaration",
    "build:es": "rimraf es && tsc --target es6 --outDir es --module es6",
    "build": "npm run build:commonjs && npm run build:es",
    "ts": "ts-node src/",
    "prepublishOnly": "npm run build"
  },
  "keywords": ["react", "react-router", "router", "light-weight"],
  "author": {
    "name": "lexmin0412",
    "email": "zhangle_dev@outlook.com",
    "url": "https://github.com/lexmin0412"
  },
  "license": "ISC",
  "files": [
    "es",
    "lib"
  ],
  "types": "./lib/index.d.ts",
  "jsnext:main": "./es/index.js",
  "module": "./es/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/lexmin0412/pure-react-router.git",
    "directory": ""
  },
  "bugs": {
    "url": "https://github.com/lexmin0412/pure-react-router/issues"
  },
  "homepage": "https://github.com/lexmin0412/pure-react-router#readme",
  "private": false,
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@types/node": "^22.7.9",
    "@types/react": "^18.3.12",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  }
}
